= partial :article, :locals => {:post => @entry}
%ul.comments
  - @entry.comments.reverse.each do |comment|
    %li.comment{:id => "comment-#{comment.id}"}
      .body= hbr comment.body
      .footer
        .name= link_to_unless comment.homepage.blank?, comment.name, comment.homepage
        .created_at= l comment.created_at.to_time
:javascript
  document.write(unescape("%3Cscript")+" src='http://widget.zenback.jp/?base_uri=http%3A//www.portalshit.net&nsid=97540594930320808%3A%3A97540601104336297&rand="+Math.ceil((new Date()*1)*Math.random())+"' type='text/javascript'"+unescape("%3E%3C/script%3E"))
= comment_form
