<% @posts.each do |post| %>
<div class="article section">
  <div class="header">
    <h2 class="title"><a href="<%= post.link %>"><%= post.title %></a></h2>
  </div>
  <div class="body">
    <%= post.body %>
  </div>
  <div class="footer">
    <div class="created_at"><%= rl post.created_at.to_time %></div>
<% if logged_in? %>
    <p><a href="<%= post.edit_link %>"><%= rt.edit %></a></p>
<% end %>
  </div>
</div>
<% end %>
<div class="pager">
  <ul>
<% if @posts.pager.previous_page %>
    <li class="previous"><a href="?page=<%= @posts.pager.previous_page %>"><%= rt.newer %></a></li>
<% end %>
<% if @posts.pager.next_page %>
    <li class="next"><a href="?page=<%= @posts.pager.next_page %>"><%= rt.older %></a></li>
<% end %>
  </ul>
</div>
